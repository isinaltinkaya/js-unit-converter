        <input type="text" id="input"><br>
        <select id="sel2">
        </select>
        <span id="result"></span> <br>

        <button id="button" onclick=main()>Calculate</button>

        <script>

var x = new Array();
x[0] = [same, per_dB];
x[1] = [dB_per, same];

var sellist = {
    "Percentage": ["dB"],
    "dB": ["Percentage"],
    "dBm": ["mW"],
    "mW": ["dBm"]
}
    

function same(i) { return i ;}

<!--Optics-->
function per_dB(i) { return 10*Math.log10(1+parseFloat(i)) ;}
function dB_per(i) { return i ;}

window.onload = function () {
    var sel1 = document.getElementById("sel1"),
        sel2 = document.getElementById("sel2");
    for (var u1 in sellist) {
        sel1.options[sel1.options.length] = new Option(u1, u1);
    }
    sel1.onchange = function (){
        sel2.length = 0;
        <!--for (var u2 in sellist[sel1.value]) {-->
            <!--sel2.options[sel2.options.length] = new Option(u2, u2);-->

        var units = sellist[sel1.value];
            for (var i = 0; i < units.length; i++) {
                sel2.options[sel2.options.length] = new Option(units[i], units[i]);       
        }
    }
}

function main() {
    var sel1 = document.getElementById("sel1").value;
    var sel2 = document.getElementById("sel2").value;
    var res = document.getElementById("result");
    var i = document.getElementById("input").value;
    res.innerHTML = x[sel1][sel2](i);
}

        </script>






